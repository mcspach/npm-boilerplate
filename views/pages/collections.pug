extends ../base.pug

block variables 
  - var template = 'collection'

block content 
  .collections
    .collections_wrapper 
      .collections_titles
        each collection, index in collections 
          .collections_title_label=`Collection` + ` ${Numbers(index)}`
          .collections_titles_title=collection.data.title

      .collections__gallery
          .collections__gallery__wrapper
            each collection in collections
              each product in collection.data.products
                a.collections__gallery__link(href=Link(product.products_product))
                figure.collections__gallery__media
                  img.collections__gallery__media__image(src=product.products_product.data.image.url)

      .collections_content
        each collection in collections
          article.collections_article 
            h2.collections_article_title=collection.data.title 
            p.collections_article_description=collection.data.description 

        